{% if section.settings.container == 'container'  %}
{% assign container_class = 'container' %}
    {% else %}
    {% assign container_class = 'container-fluid' %}
{% endif %}

<div class="{{container_class}} my-5">
    <h1>{{ page.title }}</h1>
    {% if section.settings.show_publish_date == true %}
    {% capture date %}<time datetime="{{ page.published_at | date: '%Y-%m-%d' }}">{{ page.published_at | date: format: 'abbreviated_date' }}</time>{% endcapture %}
    <small>{{date}}</small>
    {% endif %}
    <div class="my-5">{{ page.content }}</div>
</div>




{% schema %}
{
    "name":"page settings",
    "settings":[
    {

            "type":"select",
            "id" :"container",
            "label":"Layout",
            "options":[
          {
              "value":"container",
              "label":"container"
          },
          {
              "value" : "container-fluid",
              "label" : "container-fluid"
          }
        ],

        "default" : "container"
    },
    {
        "type" : "checkbox",
        "id" : "show_publish_date",
        "default" : true,
        "label" : "Show Publish Date"
    }
  ]
}
{% endschema %}